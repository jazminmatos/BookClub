<h1>See specific book:</h1>


<h1>Book: <%= @book.title %></h1>

<p>By <%= @book.author %></p>

<p><%= @book.summary %></p>

<p>Comments:</p>
<ul>
    <% @book.comments.each do |comment| %>
        <li>
            <%= comment.user.email %> says <%= comment.content %><br>
            <%= link_to "edit", edit_comment_path(comment) %> | <%= link_to "delete", comment_path(comment), method: :delete %>
        </li>
    <% end %>
</ul>

<%= link_to "New Comment", new_book_comment_path(@book.id) %>

<br><br>
<%= link_to "Edit this book", edit_book_path(@book.id) %><br>
<%= link_to "Go to book club page", club_path(@book.club_id) %>
<%= button_to "Delete This Book", book_path(@book), method: :delete %>